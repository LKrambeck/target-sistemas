#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int count = 0;

    // Solicita a entrada da string
    printf("Digite uma string: ");
    scanf("%s", str);

    // Percorre a string e conta as ocorrências de 'a' ou 'A'
    for (int i = 0; i < strlen(str); i++) {
        if (str[i] == 'a' || str[i] == 'A') {
            count++;
        }
    }

    // Verifica se a letra 'a' ou 'A' foi encontrada e imprime o resultado
    if (count > 0) {
        printf("A letra 'a' aparece %d vez(es) na string.\n", count);
    } else {
        printf("A letra 'a' não foi encontrada na string.\n");
    }

    return 0;
}
